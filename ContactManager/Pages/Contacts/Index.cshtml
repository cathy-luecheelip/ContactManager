                @Html.DisplayNameFor(model => model.Contact[0].AddressState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact[0].AddressZip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact[0].PhoneType)
